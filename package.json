{
  "name": "intl-elements",
  "version": "0.0.1-alpha.6",
  "description": "Custom elements for using Intl APIs declaratively.",
  "author": "zacky@marchbox.com",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/marchbox/intl-elements"
  },
  "keywords": [
    "intl",
    "i18n",
    "custom elements",
    "web components"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "run-p -r build:watch dev:server",
    "dev:server": "run-s dev:server:wait dev:server:serve",
    "dev:server:wait": "wait-on dist/index.js",
    "dev:server:serve": "web-dev-server",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "@web/dev-server": "^0.1.35",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "lit": "^2.4.1"
  }
}
